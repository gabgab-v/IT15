@model IT15.ViewModels.UserDashboardViewModel
@using IT15.ViewModels

@{
    ViewData["Title"] = "My Dashboard";
}

<!-- Welcome Header -->
<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Welcome, @User.Identity.Name!</h1>
    <p class="text-gray-600 mt-1">Here is your summary for today, @DateTime.Now.ToString("dddd, MMMM dd").</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column: Main Actions -->
    <div class="lg:col-span-2 space-y-8">
        <!-- Today's Attendance Card -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-700 mb-4">Today's Attendance</h3>
            @if (Model.AttendanceStatus == TodayAttendanceStatus.NotCheckedIn)
            {
                <div class="text-center p-4 bg-blue-50 rounded-lg">
                    <p class="text-gray-700 mb-4">You have not checked in yet today.</p>
                    <form asp-action="CheckIn" asp-controller="UserDashboard" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-700">
                            Check In Now
                        </button>
                    </form>
                </div>
            }
            else if (Model.AttendanceStatus == TodayAttendanceStatus.CheckedIn)
            {
                <div class="text-center p-4 bg-yellow-50 rounded-lg">
                    <p class="text-gray-700 mb-4">You are currently checked in. Don't forget to check out at the end of your day.</p>
                    <form asp-action="CheckOut" asp-controller="UserDashboard" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-red-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-red-700">
                            Check Out
                        </button>
                    </form>
                </div>
            }
            <!-- THE FIX: New block to handle when a user is checked in but it's too early to check out -->
            else if (Model.AttendanceStatus == TodayAttendanceStatus.CheckedInCannotCheckOut)
            {
            <div class="text-center p-4 bg-yellow-50 rounded-lg">
                <div class="flex items-center justify-center text-yellow-800">
                    <i data-lucide="clock" class="w-6 h-6 mr-2"></i>
                    <p class="font-semibold">You are currently checked in. Check-out is available after your shift.</p>
                </div>
            </div>
            }
            else 
            {
            <div class="text-center p-4 bg-green-50 rounded-lg">
                <div class="flex items-center justify-center text-green-700">
                    <i data-lucide="check-circle" class="w-6 h-6 mr-2"></i>
                    <p class="font-semibold">Your attendance for today is complete. Well done!</p>
                </div>
            </div>
            }
        </div>

        <!-- Quick Links -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <a asp-action="LeaveRequests" class="block bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:border-blue-500 hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold text-gray-800">My Leave Requests</h3>
                <p class="text-gray-600 mt-1 text-sm">Apply for leave and view your request history.</p>
            </a>
            <a asp-action="PaySlips" class="block bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:border-blue-500 hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold text-gray-800">My Pay Slips</h3>
                <p class="text-gray-600 mt-1 text-sm">View and download your monthly pay slips.</p>
            </a>
        </div>
    </div>

    <!-- Right Column: Summaries -->
    <div class="space-y-6">
        <!-- Upcoming Time Off -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Upcoming Approved Leave</h3>
            @if (Model.UpcomingLeave != null)
            {
                <div class="bg-gray-50 p-4 rounded-md">
                    <p class="font-bold text-gray-800">@Model.UpcomingLeave.StartDate.ToString("MMM dd") - @Model.UpcomingLeave.EndDate.ToString("MMM dd, yyyy")</p>
                    <p class="text-sm text-gray-600">@Model.UpcomingLeave.Reason</p>
                </div>
            }
            else
            {
                <p class="text-sm text-gray-500">You have no upcoming approved leave.</p>
            }
        </div>

        <!-- Pending Leave Requests -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Pending Leave Requests</h3>
            @if (Model.PendingLeaveRequestsCount > 0)
            {
                <p class="text-2xl font-bold text-blue-600">@Model.PendingLeaveRequestsCount</p>
                <p class="text-sm text-gray-500">leave requests awaiting approval.</p>
            }
            else
            {
                <p class="text-sm text-gray-500">You have no pending leave requests.</p>
            }
        </div>

        <!-- Overtime Summary Card -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Overtime Summary</h3>
            <div class="space-y-4">
                <div>
                    <p class="text-sm text-gray-500">Approved OT this month</p>
                    <p class="text-2xl font-bold text-gray-800">@Model.ApprovedOvertimeHoursThisMonth.ToString("F2") <span class="text-base font-normal">hours</span></p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">Pending OT requests</p>
                    <p class="text-2xl font-bold text-blue-600">@Model.PendingOvertimeRequestsCount</p>
                </div>
            </div>
            <a asp-action="OvertimeRequests" class="text-blue-600 hover:underline mt-4 inline-block font-medium text-sm">Manage Overtime &rarr;</a>
        </div>
    </div>
</div>


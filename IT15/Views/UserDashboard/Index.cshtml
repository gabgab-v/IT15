@{
    ViewData["Title"] = "My Dashboard";
    // This will use the main layout file at /Views/UserDashboard/Shared/_Layout.cshtml
    
}

<<!-- Grid for stats cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- Card 1: My Profile -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-700">My Profile</h3>
        <p class="text-gray-600 mt-2">View and update your personal information and contact details.</p>
        <a href="#" class="text-blue-600 hover:underline mt-4 inline-block font-medium">Go to Profile &rarr;</a>
    </div>

    <!-- Card 2: Submit Leave Request -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-700">Leave Requests</h3>
        <p class="text-gray-600 mt-2">Submit a new leave request or check the status of existing ones.</p>
        <a href="#" class="text-blue-600 hover:underline mt-4 inline-block font-medium">Manage Leave &rarr;</a>
    </div>

    <!-- Card 3: View Daily Logs -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-700">Daily Logs</h3>
        <p class="text-gray-600 mt-2">Review your past daily logs and work reports.</p>
        <a href="#" class="text-blue-600 hover:underline mt-4 inline-block font-medium">View Logs &rarr;</a>
    </div>

</div>

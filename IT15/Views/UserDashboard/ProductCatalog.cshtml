@model IEnumerable<IT15.Models.StoreProduct>

@{
    ViewData["Title"] = "Product Catalog";
    Layout = "~/Views/UserDashboard/_Layout.cshtml";
}

<div class="flex justify-between items-center border-b border-gray-200 pb-4 mb-6">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Product Catalog</h2>
        <p class="text-gray-500 mt-1">Browse products and submit a request for approval.</p>
    </div>
    <a asp-action="MyProductRequests" class="text-sm font-medium text-blue-600 hover:text-blue-800">
        View My Requests &rarr;
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
        <p>@TempData["SuccessMessage"]</p>
    </div>
}

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    @foreach (var product in Model)
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
            <div class="h-48 bg-gray-100 flex items-center justify-center p-4">
                <img src="@product.Image" alt="@product.Title" class="max-h-full max-w-full object-contain" />
            </div>
            <div class="p-4 flex flex-col flex-grow">
                <h4 class="font-semibold text-gray-800 text-sm flex-grow">@product.Title</h4>
                <p class="text-xl font-bold text-gray-900 my-2">@product.Price.ToString("C")</p>
                <form asp-action="RequestProduct" asp-controller="UserDashboard" method="post" class="mt-2 space-y-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productName" value="@product.Title" />
                    <input type="hidden" name="price" value="@product.Price" />
                    <div class="flex items-center justify-center space-x-2">
                        <input type="number" name="quantity" value="1" min="1" class="w-20 text-center border-gray-300 rounded-md shadow-sm" />
                        <button type="submit" class="flex-1 bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700">Request</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>


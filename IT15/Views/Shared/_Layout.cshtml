<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

    <!-- Navbar -->
    <header class="bg-white shadow-md">
        <nav class="container mx-auto flex items-center justify-between px-4 py-3">
            <a class="text-xl font-bold text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">OpenBook</a>
            <div class="hidden md:flex space-x-6">
                <a class="text-gray-700 hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-gray-700 hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Page Body -->
    <main class="container mx-auto flex-grow px-4 py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t text-center text-gray-500 text-sm py-4 mt-6">
        <div class="container mx-auto">
            &copy; 2025 - IT15 -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:text-blue-500">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

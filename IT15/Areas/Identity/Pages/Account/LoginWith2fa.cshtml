@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = null; // Use a clean layout for a focused message
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook HRIS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-2xl shadow-lg">
        <div>
            <!-- Icon -->
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
                <i data-lucide="shield-check" class="h-6 w-6 text-blue-600"></i>
            </div>

            <h2 class="mt-6 text-center text-2xl font-bold text-gray-900">
                @ViewData["Title"]
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Your login is protected. Please enter the code from your authenticator app.
            </p>
        </div>

        <!-- 2FA Form -->
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="mt-8 space-y-6">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-lg text-sm"></div>

            <!-- Verification Code Input -->
            <div>
                <label asp-for="Input.TwoFactorCode" class="block text-sm font-medium text-gray-700">Authenticator Code</label>
                <input asp-for="Input.TwoFactorCode" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="off" />
                <span asp-validation-for="Input.TwoFactorCode" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Remember Machine Checkbox -->
            <div class="flex items-center">
                <input asp-for="Input.RememberMachine" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                <label asp-for="Input.RememberMachine" class="ml-2 block text-sm text-gray-900">
                    @Html.DisplayNameFor(m => m.Input.RememberMachine)
                </label>
            </div>

            <!-- Login Button -->
            <div>
                <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Log in
                </button>
            </div>
        </form>

        <!-- Recovery Code Link -->
        <div class="text-sm text-center">
            <p>
                Having trouble? You can
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-blue-600 hover:text-blue-500">
                    log in with a recovery code
                </a>.
            </p>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

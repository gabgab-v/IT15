@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="mt-6">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-lg text-sm mb-4"></div>

        <div class="space-y-6">
            <!-- Old Password -->
            <div>
                <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.OldPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="current-password" />
                <span asp-validation-for="Input.OldPassword" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- New Password -->
            <div>
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.NewPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="new-password" />
                <span asp-validation-for="Input.NewPassword" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Confirm New Password -->
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div>
                <button type="submit" class="w-full md:w-auto bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700">
                    Update password
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

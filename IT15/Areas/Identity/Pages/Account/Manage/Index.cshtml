@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="mt-6">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-lg text-sm mb-4"></div>

        <div class="space-y-6">
            <!-- Username (Read-only) -->
            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100 cursor-not-allowed" disabled />
            </div>

            <!-- Phone Number -->
            <div>
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.PhoneNumber" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div>
                <button id="update-profile-button" type="submit" class="w-full md:w-auto bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

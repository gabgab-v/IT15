@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<nav class="space-y-1">
    <a asp-page="./Index" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.IndexNavClass(ViewContext))">
        <i data-lucide="user" class="w-4 h-4 mr-3"></i>
        Profile
    </a>
    <a asp-page="./Email" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.EmailNavClass(ViewContext))">
        <i data-lucide="mail" class="w-4 h-4 mr-3"></i>
        Email
    </a>
    <a asp-page="./ChangePassword" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.ChangePasswordNavClass(ViewContext))">
        <i data-lucide="lock" class="w-4 h-4 mr-3"></i>
        Password
    </a>
    @if (hasExternalLogins)
    {
        <a asp-page="./ExternalLogins" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.ExternalLoginsNavClass(ViewContext))">
            <i data-lucide="link" class="w-4 h-4 mr-3"></i>
            External logins
        </a>
    }
    <a asp-page="./TwoFactorAuthentication" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext))">
        <i data-lucide="smartphone" class="w-4 h-4 mr-3"></i>
        Two-factor authentication
    </a>
    @*<a asp-page="./PersonalData" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg @(ManageNavPages.PersonalDataNavClass(ViewContext))">
        <i data-lucide="database" class="w-4 h-4 mr-3"></i>
        Personal data
    </a>*@
</nav>

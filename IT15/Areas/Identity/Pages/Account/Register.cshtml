@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // ✅ Same layout as logins
}

<div class="flex items-center justify-center py-12">
    <div class="w-full max-w-md p-8 space-y-8 bg-white rounded-2xl shadow-lg">
        <div>
            <!-- Branding -->
            <div class="flex justify-center items-center mb-6">
                <img src="https://placehold.co/50x50/3b82f6/ffffff?text=OB" alt="OpenBook Logo" class="rounded-full">
                <span class="ml-4 text-3xl font-bold text-gray-800">OpenBook</span>
            </div>
            <h2 class="text-center text-2xl font-semibold text-gray-700">Create a New Account</h2>
            <p class="mt-2 text-center text-sm text-gray-500">
                Fill in the details to register.
            </p>
        </div>

        <!-- Register Form -->
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-lg text-sm" role="alert"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="Input.Username" class="block text-sm font-medium text-gray-700">Username</label>
                    <input asp-for="Input.Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Username" />
                    <span asp-validation-for="Input.Username" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input asp-for="Input.Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="email@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                        <select asp-for="Input.CountryCode" class="block w-24 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-700 sm:text-sm">
                            <option value="+63">PH +63</option>
                            <option value="+1">USA +1</option>
                            <option value="+44">UK +44</option>
                            <option value="+61">AUS +61</option>
                        </select>
                        <input asp-for="Input.PhoneNumber" type="text" maxlength="10"
                               class="flex-1 block w-full min-w-0 rounded-none rounded-r-md px-3 py-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="9171234567" />
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Input.Password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Register Button -->
            <div>
                <button id="registerSubmit" type="submit" class="group relative w-full flex justify-center py-3 px-4 rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Register
                </button>
            </div>
        </form>

        <!-- Extra Link -->
        <div class="text-sm text-center mt-4">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-600 hover:text-blue-500">
                Already have an account? Sign in
            </a>
        </div>
    </div>
</div>

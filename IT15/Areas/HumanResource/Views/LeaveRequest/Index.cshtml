@model IEnumerable<IT15.Models.LeaveRequest>

@{
    ViewData["Title"] = "Manage Leave Requests";

    // Helper to get the correct CSS class based on the request status
    string GetStatusBadgeClass(LeaveRequestStatus status)
    {
        return status switch
        {
            LeaveRequestStatus.Approved => "bg-green-100 text-green-800",
            LeaveRequestStatus.Pending => "bg-yellow-100 text-yellow-800",
            LeaveRequestStatus.Denied => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}

<div class="border-b border-gray-200 pb-4 mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Employee Leave Requests</h2>
    <p class="text-gray-500 mt-1">Review and action all pending and historical leave requests.</p>
</div>

<!-- Search and Filter Form -->
<div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 mb-6">
    <form asp-action="Index" method="get">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label for="searchString" class="sr-only">Search by Email</label>
                <input type="text" name="searchString" id="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by employee email..." class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" />
            </div>
            <div>
                <label for="statusFilter" class="sr-only">Filter by Status</label>
                <select name="statusFilter" id="statusFilter" asp-items="Html.GetEnumSelectList<LeaveRequestStatus>()" onchange="this.form.submit()" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="flex items-center space-x-2">
                <button type="submit" class="w-full md:w-auto bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700">Filter</button>
                <a asp-action="Index" class="w-full md:w-auto text-center bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-lg hover:bg-gray-300">Clear</a>
            </div>
        </div>
    </form>
</div>


<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dates</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var request in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            @request.RequestingEmployee.Email
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @request.StartDate.ToString("MMM dd") - @request.EndDate.ToString("MMM dd, yyyy")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @request.Reason
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @GetStatusBadgeClass(request.Status)">
                                @request.Status.ToString()
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            @if (request.Status == LeaveRequestStatus.Pending)
                            {
                                <div class="flex items-center space-x-2">
                                    <form asp-area="HumanResource" asp-controller="LeaveRequest" asp-action="Approve" asp-route-id="@request.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-green-600 hover:text-green-900">Approve</button>
                                    </form>
                                    <form asp-area="Admin" asp-controller="LeaveRequest" asp-action="Deny" asp-route-id="@request.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-red-600 hover:text-red-900">Deny</button>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


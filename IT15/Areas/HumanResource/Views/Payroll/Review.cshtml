@model IT15.ViewModels.HumanResource.PayrollReviewViewModel

@{
    ViewData["Title"] = $"Review Payroll for {Model.Payroll.PayrollMonth:MMMM yyyy}";
    var culture = new System.Globalization.CultureInfo("en-PH");
}

<div class="border-b border-gray-200 pb-4 mb-6">
    <a asp-action="Index" class="text-blue-600 hover:underline text-sm mb-2 inline-block">&larr; Back to Payroll List</a>
    <h2 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h2>
    <p class="text-gray-500 mt-1">A detailed breakdown of the generated payroll.</p>
</div>

<!-- Summary Card -->
<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Status</p>
            <p class="text-lg font-bold text-gray-900">@Model.Payroll.Status</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Total Employees</p>
            <p class="text-lg font-bold text-gray-900">@Model.PaySlips.Count</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Total Net Pay</p>
            <p class="text-lg font-bold text-gray-900">@Model.TotalNetPay.ToString("C", culture)</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Date Generated</p>
            <p class="text-lg font-bold text-gray-900">@Model.Payroll.DateGenerated.ToString("MMM dd, yyyy")</p>
        </div>
    </div>
</div>


<!-- Payslip Details Table -->
<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Individual Pay Slips</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Gross Pay</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Deductions</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Net Pay</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var slip in Model.PaySlips)
                {
                    <tr>
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">@slip.Employee.Email</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-500">@slip.GrossPay.ToString("C", culture)</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-500">@slip.TotalDeductions.ToString("C", culture)</td>
                        <td class="px-6 py-4 text-sm text-right font-semibold text-gray-800">@slip.NetPay.ToString("C", culture)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

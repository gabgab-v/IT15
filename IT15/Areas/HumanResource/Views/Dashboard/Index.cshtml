@model IT15.ViewModels.HumanResource.HumanResourceDashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Human Resources Dashboard</h1>
    <p class="text-gray-600 mt-1">Overview of key HR metrics and tasks.</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Pending Leave Requests Card -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-yellow-300">
        <div class="flex items-center">
            <div class="bg-yellow-100 p-3 rounded-full">
                <i data-lucide="mail-question" class="w-6 h-6 text-yellow-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Pending Leave Requests</p>
                <p class="text-2xl font-bold text-gray-900">@Model.PendingLeaveRequestsCount</p>
            </div>
        </div>
        <a asp-area="HumanResource" asp-controller="LeaveRequest" asp-action="Index" class="text-blue-600 hover:underline mt-4 inline-block font-medium text-sm">Review Requests &rarr;</a>
    </div>

    <!-- Employees on Leave Card -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-blue-300">
        <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-full">
                <i data-lucide="plane-takeoff" class="w-6 h-6 text-blue-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Employees on Leave Today</p>
                <p class="text-2xl font-bold text-gray-900">@Model.EmployeesOnLeaveToday</p>
            </div>
        </div>
        <p class="text-gray-400 mt-4 text-sm">Based on approved requests.</p>
    </div>

    <!-- Payrolls Pending Approval Card -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-red-300">
        <div class="flex items-center">
            <div class="bg-red-100 p-3 rounded-full">
                <i data-lucide="hourglass" class="w-6 h-6 text-red-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Payrolls Pending Approval</p>
                <p class="text-2xl font-bold text-gray-900">@Model.PayrollsPendingApprovalCount</p>
            </div>
        </div>
        <a asp-area="HumanResource" asp-controller="Payroll" asp-action="Index" class="text-blue-600 hover:underline mt-4 inline-block font-medium text-sm">Go to Payroll &rarr;</a>
    </div>
</div>

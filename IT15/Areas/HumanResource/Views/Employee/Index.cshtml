    @model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Employee Overview";
}

<h2 class="text-2xl font-bold text-gray-900 mb-4">Employee Payroll Overview</h2>
<p class="text-gray-600 mb-6">Select an employee to view a detailed projection of their upcoming payslip for the current month.</p>

<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var user in Model)
            {
                <tr>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">@user.Email</td>
                    <td class="px-6 py-4 text-sm text-gray-500">@user.UserName</td>
                    <td class="px-6 py-4 text-right text-sm font-medium">
                        <a asp-action="PayrollOverview" asp-route-id="@user.Id" class="text-blue-600 hover:text-blue-900">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


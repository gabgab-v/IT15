@model IT15.Areas.HumanResource.Controllers.LoginViewModel
@{
    ViewData["Title"] = "HR Login";
    Layout = null; // This page does not use a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook HRIS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border border-gray-200">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-800">Human Resources Login</h1>
            <p class="text-gray-500 mt-2">Access the HR management panel.</p>
        </div>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 bg-red-50 p-3 rounded-md"></div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900"></label>
                </div>
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2.5 px-4 rounded-lg hover:bg-blue-700">
                    Sign In
                </button>
            </div>
        </form>
    </div>
</body>
</html>

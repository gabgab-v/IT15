@model IT15.Areas.Admin.ViewModels.LoginViewModel
@* The above @model directive has been updated to point to the new ViewModel location *@

@{
    ViewData["Title"] = "Admin Log in";
    Layout = null; // This page does not use a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook HRIS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-xl p-8">
            <div class="text-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800">Administrator Login</h2>
                <p class="text-gray-500">Welcome back to OpenBook HRIS</p>
            </div>

            <!-- THIS FORM IS THE CRITICAL PART -->
            <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-md mb-4 text-sm" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="admin@example.com" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-6 flex items-center">
                    <input asp-for="RememberMe" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">Remember me?</label>
                </div>

                <div>
                    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Log In
                    </button>
                </div>
            </form>
        </div>
        <p class="text-center text-sm text-gray-500 mt-4">
            &copy; @DateTime.Now.Year - OpenBook HRIS. All rights reserved.
        </p>
    </div>
</body>
</html>

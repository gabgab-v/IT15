<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook HRIS</title>

    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Lucide Icons for modern, clean icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        /* Use the Inter font family defined above */
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Custom scrollbar for a cleaner look */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: #94a3b8;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #475569;
            }
    </style>
</head>
<body class="bg-gray-100">

    <div class="flex h-screen">
        <!-- Sidebar Navigation -->
        <aside class="w-64 flex-shrink-0 bg-white border-r border-gray-200 flex flex-col">
            <!-- Logo and Branding -->
            <div class="h-16 flex items-center justify-center border-b border-gray-200 p-4">
                <div class="flex items-center space-x-3">
                    <img src="https://placehold.co/40x40/3b82f6/ffffff?text=OB" alt="OpenBook Logo" class="rounded-full">
                    <span class="text-xl font-bold text-gray-800">OpenBook</span>
                </div>
            </div>

            <!-- Navigation Links -->
            <nav class="flex-1 px-4 py-4 space-y-2">
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium bg-blue-50 text-blue-600 rounded-lg">
                    <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
                    Dashboard
                </a>
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="users" class="w-5 h-5 mr-3"></i>
                    Manage Employees
                </a>
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="calendar-check" class="w-5 h-5 mr-3"></i>
                    Leave Requests
                </a>
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="book-open" class="w-5 h-5 mr-3"></i>
                    Daily Log
                </a>
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="clipboard-list" class="w-5 h-5 mr-3"></i>
                    Attendance Report
                </a>

                <!--
                    ROLE-BASED ACCESS CONTROL EXAMPLE:
                    Wrap admin-only links in an if-statement.
                    This checks if the currently logged-in user has the "Admin" role.
                    An employee without this role will not see these links.
                -->
                @if (User.IsInRole("Admin"))
                {
                    <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="landmark" class="w-5 h-5 mr-3"></i>
                        Payroll
                    </a>
                    <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="shield" class="w-5 h-5 mr-3"></i>
                        User Roles
                    </a>
                    <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="history" class="w-5 h-5 mr-3"></i>
                        Audit Log
                    </a>
                    <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="building-2" class="w-5 h-5 mr-3"></i>
                        Departments
                    </a>
                }
            </nav>

            <!-- Profile section at the bottom -->
            <div class="p-4 border-t border-gray-200">
                <a href="#" class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="user-circle" class="w-5 h-5 mr-3"></i>
                    Profile
                </a>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6">
                <div>
                    <h1 class="text-xl font-semibold text-gray-800">Welcome Back, @(User.Identity.Name ?? "Administrator")!</h1>
                </div>
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                        AD
                    </div>
                </div>
            </header>

            <!-- This is where the specific page content will be rendered -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Initialize Lucide Icons -->
    <script>
        lucide.createIcons();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
